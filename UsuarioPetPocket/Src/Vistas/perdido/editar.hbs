    <div >
        {{#each lista}}
        <form action="/perdido/editar/{{idPerdido}}" method="post" id="contenedor">
            <div id="stitulo">
                <p> <strong>AYUDANOS A <BR> ENCONTRARLO</strong></p>
            </div>
            <div id="ImagenPerdido">
                <label id="subtitulo">Imagen Perdido:</label>
                <input type="text" name="ImagenPerdido" value="{{ImagenPerdido}}" required>
            </div>
            <div id="FechaPerdido">
                <label id="subtitulo">Fecha Perdido:</label>
                {{!-- <input type="text" name="FechaPerdido" value="{{FechaPerdido}}" required> --}}
                <select name="FechaPerdido" value="{{FechaPerdido}}" required>
                    <option>Hace 1 día</option>
                    <option>Hace 2 día</option>
                    <option>Hace 1 semana</option>
                    <option>Hace 1-2 semana</option>
                    <option>Más de un mes</option>
                </select>
            </div>
            <div id="DescripcionPerdido">
                <label id="subtitulo">Descripcion Perdido:</label>
                <input type="text" name="DescripcionPerdido" value="{{DescripcionPerdido}}" required>
            </div>
            <div id="TelefonoPerdido">
                <label id="subtitulo">Telefono Perdido:</label>
                <input type="text" name="TelefonoPerdido" value="{{TelefonoPerdido}}" required>
            </div>
            <div id="boton">
                <button type="submit">Actualizar</button>
            </div>
        </form>
        {{/each}}
    </div>
